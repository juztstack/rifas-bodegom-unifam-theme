{% extends "layouts/base.twig" %}
{% block content %}
    <article>
        <header>
            <h1>{{ post.title }}</h1>
            <p>
                Posted by {{ post.author.name }} <span>&bull;</span>
                <time
                    datetime="{{ post.date('Y-m-d H:i:s') }}"
                >{{ post.date }}</time>
            <p>
            <ul>
                {% for term in post.terms({ taxonomy: 'category' }) %}
                    <li>
                        <a href="{{ term.link }}">{{ term.title }}</a>
                    <li>
                {% endfor %}
            </ul>
        </header>
        <section>
            {{ post.content }}
        </section>
    </article>
{% endblock %}